<% if(theme.toolbox && theme.toolbox.isShow == true) { %>
  <div class="toolbox">
    <a class="toolbox-entry" href="/">
      <span class="toolbox-entry-text">盒子</span>
      <i class="icon-home"></i>
    </a>
    <ul class="list-toolbox">
      <% theme.page_nav.forEach(function(item, i){ %>
        <li class="item-toolbox">
          <a 
            class="<%= theme.page_nav_style ? theme.page_nav_style : 'ROUND_RECT' %>" 
            href="<%= item.url %>"
            target="<%= item.target_blank ? '_blank' : '_self' %>"
            >
            <%= item.name %>
          </a>
        </li>
      <% }) %>
    </ul>
  </div>
<% } else if (is_post() || is_page()) { %>
  <div class="toolbox">
    <a class="toolbox-entry" href="/archives">
      <img class="avatar" src="/images/avatar.jpg" alt="">
    </a>
    <ul class="list-toolbox"
    </ul>
  </div>
<% } %>
